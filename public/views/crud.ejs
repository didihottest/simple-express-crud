<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partial/head-meta.ejs") %>
    <title>Index</title>
</head>

<body>
    <%- include("partial/navbar") %>
    <div class="container-fluid">
        <h1 class="text-center">Member Hoby List</h1>
        <div class="text-center">
            <a href="/add"><button class="btn btn-success mb-5 mt-3">Add New Entry</button></a>
            <% if(notif_success == 'suksesupdate') { %>
            <%- include('partial/message') %>
            <% } else if (notif_success == "suksesedit") { %>
            <%- include('partial/message-edit') %>
            <% } else if (notif_success == "suksesdelete") { %>
            <%- include('partial/message-delete') %>
            <% } %>
            <table class="table table-bordered table-hover ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Hoby</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((data, index) => { %>
                    <tr>
                        <td><%= data.id %></td>
                        <td><%= data.nama %></td>
                        <td><%= data.hoby %></td>
                        <td>
                            <div class="row">
                                <div class="col-3"></div>
                                <div class="col-3"><a href="/edit?dataID=<%= index+1 %>">
                                        <button class="btn btn-warning">Edit</button>
                                    </a></div>
                                <div class="col-3">
                                    <form action="/?dataID=<%=index%>" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>


    <script src="public/script.js"></script>
    <script type="text/javascript" src="public/script/bootstrap.min.js"></script>
</body>

</html>